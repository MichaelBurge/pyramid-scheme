#lang pyramid

(require psl "primitives.pmd")
(require psl "syntax.pmd")
(require psl "arith.pmd")

; Primitives
(define null? %-null?)

(define fixnum %-box)

; (fixnum? x) implies x = (fixnum (unbox x))
; (symbol? x) implies x = (symbol (unbox x))
(define unbox %-unbox)

(define pair %-cons)
(define l %-car)
(define r %-cdr)

(defmacro (list . xs)
  (define (loop lst)
    (if (null? xs)
        '(%-null)
        `(pair ,(car lst) (list ,@(cdr lst)))))
  (loop (reverse xs)))
